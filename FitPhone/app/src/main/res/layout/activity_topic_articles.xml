<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicArticlesActivity"
    android:background="@drawable/rounded_corner_w">

    <ImageView
        android:id="@+id/chronicle_article_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wisdom_article_category_btn"
        app:layout_constraintStart_toEndOf="@+id/challenge_article_category_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ink" />

    <ImageView
        android:id="@+id/home_article_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/challenge_article_category_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house" />

    <ImageView
        android:id="@+id/wisdom_article_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profile_article_category_btn"
        app:layout_constraintStart_toEndOf="@+id/chronicle_article_category_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wisdom_b" />

    <ImageView
        android:id="@+id/challenge_article_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chronicle_article_category_btn"
        app:layout_constraintStart_toEndOf="@+id/home_article_category_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swords_b" />

    <ImageView
        android:id="@+id/profile_article_category_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wisdom_article_category_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/article_category_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/cantarell"
        android:text="SLEEP"
        android:textColor="#00B7EE"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/article_1_btn"
        app:layout_constraintEnd_toStartOf="@+id/article_category_icon_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/article_category_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/article_1_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/article_category_title_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slumber" />

    <Button
        android:id="@+id/article_1_btn"
        android:layout_width="379dp"
        android:layout_height="113dp"
        android:background="@drawable/rounded_corner_b"
        android:fontFamily="@font/cantarell"
        android:text="How much should you sleep? "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/article_2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_category_title_txt" />

    <Button
        android:id="@+id/article_2_btn"
        android:layout_width="379dp"
        android:layout_height="113dp"
        android:background="@drawable/rounded_corner_b"
        android:fontFamily="@font/cantarell"
        android:text="How you can improve your sleep quality"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/article_3_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_1_btn" />

    <Button
        android:id="@+id/article_3_btn"
        android:layout_width="379dp"
        android:layout_height="113dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_corner_b"
        android:fontFamily="@font/cantarell"
        android:text="Sleep deprivation affects on your health and daily life"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/chronicle_article_category_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_2_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>