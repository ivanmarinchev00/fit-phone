<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitphone">
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ScriptureActivity"></activity>
        <activity android:name=".ChronicleScripturesActivity" />
        <activity android:name=".ChronicleActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ArticleDescriptionActivity" />
        <activity android:name=".TopicArticlesActivity" />
        <activity android:name=".WisdomActivity" />
        <activity android:name=".ChallengeActivity" />
        <activity android:name=".ChallengeListActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>